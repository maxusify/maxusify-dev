---
import ThemeProvider from '@/components/ThemeProvider.astro'
import { siteData } from '@/constants/site-data'

import '@/styles/globals.css'
import '@fontsource/gabarito'
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='author' content={siteData.author} />
    <meta name='description' content={siteData.description} />
    <meta name='keywords' content={siteData.keywords.join(',')} />
    <meta name='og:title' content={siteData.title} />
    <meta name='og:description' content={siteData.description} />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{siteData.title}</title>
    <ThemeProvider />
  </head>
  <body>
    <slot />
  </body>
</html>
